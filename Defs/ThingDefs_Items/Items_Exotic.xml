  <!--=============== Rhino horn ====================-->
  
  <ThingDef ParentName="KKAO_HornBase">
    <defName>KKAO_RhinocerosHorn</defName>
    <label>rhinoceros horn</label>
    <description>A rhinoceros' horn. Very durable and valuable. Somewhat unwieldy as a weapon.</description>
    <graphicData>
      <texPath>Things/Item/Special/RhinoHorn</texPath>      
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <equippedAngleOffset>-20</equippedAngleOffset>
    <statBases>
      <MarketValue>450</MarketValue>
      <MaxHitPoints>150</MaxHitPoints>
      <Mass>1.8</Mass> <!-- ElephantTusk's mass = 1.8 -->
      <Flammability>1.0</Flammability>
      <DeteriorationRate>0.5</DeteriorationRate>
    </statBases>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <stackLimit>10</stackLimit>
    <tools>
      <li>
        <label>point</label>
        <capacities>
          <li>Scratch</li>
          <li>Stab</li>
        </capacities>
        <power>15</power>
        <cooldownTime>2.4</cooldownTime>
      </li>
      <li>
        <label>base</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>8</power>
        <cooldownTime>2.4</cooldownTime>
      </li>
    </tools>
  </ThingDef>

